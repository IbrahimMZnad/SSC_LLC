<odoo>
    <record id="view_zkteco_attendance_tree" model="ir.ui.view">
        <field name="name">zkteco.attendance.tree</field>
        <field name="model">zkteco.attendance.sync</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_zkteco_root" name="ZKTeco"/>
    <menuitem id="menu_zkteco_attendance" name="Attendance" parent="menu_zkteco_root"/>
    <act_window id="action_zkteco_attendance"
                name="Attendance"
                res_model="zkteco.attendance.sync"
                view_mode="tree,form"
                menu_id="menu_zkteco_attendance"/>
</odoo>
