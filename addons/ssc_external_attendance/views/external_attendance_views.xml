<odoo>
    <!-- Form View for External Attendance -->
    <record id="view_form_external_attendance" model="ir.ui.view">
        <field name="name">ssc.external.attendance.form</field>
        <field name="model">ssc.external.attendance</field>
        <field name="arch" type="xml">
            <form string="External Attendance">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="type" widget="radio"/>
                        <field name="name" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list string="Attendance Lines">
                                    <field name="employee_id"/>
                                    <field name="company_id"/>
                                    <field name="attendance_id"/>
                                    <field name="first_punch"/>
                                    <field name="last_punch"/>
                                    <field name="total_time"/>
                                    <field name="total_ot"/>
                                    <field name="absent"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open External Attendance -->
    <record id="action_external_attendance" model="ir.actions.act_window">
        <field name="name">External Attendance</field>
        <field name="res_model">ssc.external.attendance</field>
        <field name="view_mode">form,list</field>
    </record>
</odoo>
