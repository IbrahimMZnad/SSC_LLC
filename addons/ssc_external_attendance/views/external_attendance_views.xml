<odoo>
    <record id="view_form_external_attendance" model="ir.ui.view">
        <field name="name">ssc.external.attendance.form</field>
        <field name="model">ssc.external.attendance</field>
        <field name="arch" type="xml">
            <form string="External Attendance">
                <sheet>
                    <group>
                        <field name="date" 
                               attrs="{'readonly': [('id','!=',False)]}"
                               default="context_today()"/>
                        <field name="type" widget="radio"
                               default="Regular Day"/>
                        <field name="name" readonly="1" 
                               default="('todays date (' + context_today() + ')')"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="attendance_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
