<odoo>
    <record id="view_material_usage_report_form" model="ir.ui.view">
        <field name="name">material.usage.report.form</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <form string="Material Usage Report">
                <sheet>
                    <group>
                        <field name="company_ref"/>
                        <field name="start_period"/>
                        <field name="end_period"/>
                        <field name="selected_projects" widget="many2many_tags"/>
                    </group>
                    <button name="generate_usage" string="Generate Report" type="object" class="btn-primary"/>
                    <field name="usage_entries">
                        <tree>
                            <field name="material_label"/>
                            <field name="amount_used"/>
                            <field name="unit_type"/>
                            <field name="project_link"/>
                            <field name="date_used"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_material_usage_report_tree" model="ir.ui.view">
        <field name="name">material.usage.report.tree</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title"/>
                <field name="company_ref"/>
                <field name="start_period"/>
                <field name="end_period"/>
            </tree>
        </field>
    </record>

    <record id="action_material_usage_report" model="ir.actions.act_window">
        <field name="name">Material Usage Reports</field>
        <field name="res_model">material.usage.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate and view material usage reports based on company, projects, and period.
            </p>
        </field>
    </record>

    <menuitem id="menu_material_usage_report_root" name="Reports"/>
    <menuitem id="menu_material_usage_report" name="Material Usage Reports" parent="menu_material_usage_report_root" action="action_material_usage_report"/>
</odoo>
