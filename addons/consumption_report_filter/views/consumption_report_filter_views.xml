<odoo>
    <record id="view_consumption_report_filter_form" model="ir.ui.view">
        <field name="name">consumption.report.filter.form</field>
        <field name="model">consumption.report.filter</field>
        <field name="arch" type="xml">
            <form string="Consumption Report Filter">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="project_ids" widget="many2many_tags"/>
                            <field name="item_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <separator string="Filtered Results"/>
                    <field name="all_material_consumed" nolabel="1">
                        <tree string="Consumed Transactions">
                            <field name="x_studio_item_1"/>
                            <field name="x_studio_project"/>
                            <field name="x_studio_company"/>
                            <field name="x_studio_date_2"/>
                            <field name="x_studio_quantity"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_consumption_report_filter_tree" model="ir.ui.view">
        <field name="name">consumption.report.filter.tree</field>
        <field name="model">consumption.report.filter</field>
        <field name="arch" type="xml">
            <tree string="Consumption Report Filter">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_consumption_report_filter" model="ir.actions.act_window">
        <field name="name">Consumption Report Filter</field>
        <field name="res_model">consumption.report.filter</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_consumption_report_filter_root" name="Consumption Reports" sequence="10"/>
    <menuitem id="menu_consumption_report_filter" name="Consumption Report Filter"
              parent="menu_consumption_report_filter_root"
              action="action_consumption_report_filter"/>
</odoo>
