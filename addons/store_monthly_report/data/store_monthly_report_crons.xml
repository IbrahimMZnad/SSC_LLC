<odoo>
    <!-- Cron: إنشاء تقارير لكل الاستورات -->
    <record id="ir_cron_create_store_reports" model="ir.cron">
        <field name="name">Create Store Monthly Reports</field>
        <field name="model_id" ref="model_store_monthly_report"/>
        <field name="state">code</field>
        <field name="code">model._create_reports_for_all_stores()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Cron: تعبئة خطوط التقرير من x_transaction -->
    <record id="ir_cron_fill_report_lines" model="ir.cron">
        <field name="name">Fill Store Monthly Report Lines</field>
        <field name="model_id" ref="model_store_monthly_report"/>
        <field name="state">code</field>
        <field name="code">model._fill_lines_from_transactions()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
