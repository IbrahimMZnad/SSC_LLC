<odoo>
    <!-- Tree View -->
    <record id="view_custom_app_tree" model="ir.ui.view">
        <field name="name">custom.app.tree</field>
        <field name="model">custom.app</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_custom_app_form" model="ir.ui.view">
        <field name="name">custom.app.form</field>
        <field name="model">custom.app</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_custom_app_root" name="Custom App"/>
    <menuitem id="menu_custom_app_model"
              name="Custom Models"
              parent="menu_custom_app_root"
              action=""/>
</odoo>
