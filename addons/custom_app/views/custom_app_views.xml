<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_custom_app_tree" model="ir.ui.view">
        <field name="name">custom.app.list</field>
        <field name="model">custom.app</field>
        <field name="arch" type="xml">
            <tree string="Custom App List">
                <field name="name"/>
                <field name="description"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_custom_app_form" model="ir.ui.view">
        <field name="name">custom.app.form</field>
        <field name="model">custom.app</field>
        <field name="arch" type="xml">
            <form string="Custom App Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_custom_app" model="ir.actions.act_window">
        <field name="name">Custom App</field>
        <field name="res_model">custom.app</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_custom_app_root" name="Custom App"/>
    <menuitem id="menu_custom_app" name="Apps" parent="menu_custom_app_root" action="action_custom_app"/>
</odoo>
