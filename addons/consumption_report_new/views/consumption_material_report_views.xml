<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_consumption_material_report_form" model="ir.ui.view">
        <field name="name">consumption.material.report.form</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <form string="Consumption Material Report" create="false" edit="true">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="project_ids" widget="many2many_tags"/>
                            <field name="item_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <separator string="All Material Consumed"/>
                    <field name="transaction_ids" nolabel="1">
                        <tree editable="false">
                            <field name="x_name"/>
                            <field name="x_studio_item_1"/>
                            <field name="x_studio_project"/>
                            <field name="x_studio_company"/>
                            <field name="x_studio_date_2"/>
                            <field name="x_studio_quantity"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_consumption_material_report_tree" model="ir.ui.view">
        <field name="name">consumption.material.report.tree</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <tree string="Consumption Material Reports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_consumption_material_report" model="ir.actions.act_window">
        <field name="name">Consumption Material Report</field>
        <field name="res_model">consumption.material.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_consumption_material_report_root" name="Consumption Reports" sequence="10"/>
    <menuitem id="menu_consumption_material_report"
              name="Consumption Material Report"
              parent="menu_consumption_material_report_root"
              action="action_consumption_material_report"/>
</odoo>
