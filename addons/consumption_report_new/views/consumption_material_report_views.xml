<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_consumption_material_report_list" model="ir.ui.view">
        <field name="name">consumption.material.report.list</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <list string="Consumption Material Report">
                <field name="name"/>
                <field name="report_type"/>
                <field name="month"/>
                <field name="year"/>
                <field name="company_id"/>
                <field name="project_ids"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_consumption_material_report_form" model="ir.ui.view">
        <field name="name">consumption.material.report.form</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <form string="Consumption Material Report">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="report_type"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="company_id"/>
                        <field name="project_ids" widget="many2many_tags"/>
                    </group>

                    <group string="Results">
                        <field name="consumption_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_consumption_material_report" model="ir.actions.act_window">
        <field name="name">Consumption Material Report</field>
        <field name="res_model">consumption.material.report</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_consumption_material_report_list"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_consumption_report_root"
              name="Store Reports"
              sequence="10"/>

    <menuitem id="menu_consumption_material_report"
              name="Consumption Material Report"
              parent="menu_consumption_report_root"
              action="action_consumption_material_report"
              sequence="20"/>
</odoo>
