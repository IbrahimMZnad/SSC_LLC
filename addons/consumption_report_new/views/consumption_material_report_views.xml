<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_consumption_material_report_form" model="ir.ui.view">
        <field name="name">consumption.material.report.form</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <form string="Consumption Material Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="company_id"/>
                    <field name="project_ids" widget="many2many_tags"/>
                    <field name="item_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="consumed_transaction_ids" nolabel="1" readonly="1">
                        <tree string="Consumed Transactions">
                            <field name="x_studio_item_1"/>
                            <field name="x_studio_project"/>
                            <field name="x_studio_company"/>
                            <field name="x_studio_date_2"/>
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="view_consumption_material_report_tree" model="ir.ui.view">
        <field name="name">consumption.material.report.tree</field>
        <field name="model">consumption.material.report</field>
        <field name="arch" type="xml">
            <tree string="Consumption Material Reports">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_consumption_report_root" name="Consumption Reports"/>
    <menuitem id="menu_consumption_report_new" name="Consumption Report New"
              parent="menu_consumption_report_root" action="action_consumption_material_report"/>

    <record id="action_consumption_material_report" model="ir.actions.act_window">
        <field name="name">Consumption Material Report</field>
        <field name="res_model">consumption.material.report</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
