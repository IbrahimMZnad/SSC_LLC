<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="view_consumption_report_new_list" model="ir.ui.view">
        <field name="name">consumption.report.new.list</field>
        <field name="model">consumption.report.new</field>
        <field name="arch" type="xml">
            <list string="Consumption Reports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_consumption_report_new_form" model="ir.ui.view">
        <field name="name">consumption.report.new.form</field>
        <field name="model">consumption.report.new</field>
        <field name="arch" type="xml">
            <form string="Consumption Material Report">
                <sheet>
                    <group>
                        <h1><field name="name" readonly="1"/></h1>
                    </group>
                    <group string="Filters" class="oe_highlight">
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="project_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="item_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Results">
                            <field name="all_material_consumed" nolabel="1">
                                <tree string="Consumed Transactions" editable="false">
                                    <field name="name"/>
                                    <field name="x_studio_project"/>
                                    <field name="x_studio_company"/>
                                    <field name="x_studio_date_2"/>
                                    <field name="x_studio_item_1"/>
                                    <field name="x_studio_quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_consumption_report_new" model="ir.actions.act_window">
        <field name="name">Consumption Material</field>
        <field name="res_model">consumption.report.new</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_consumption_report_new_root" name="Reports"/>
    <menuitem id="menu_consumption_report_new" name="Consumption Material" parent="menu_consumption_report_new_root"
              action="action_consumption_report_new"/>
</odoo>
