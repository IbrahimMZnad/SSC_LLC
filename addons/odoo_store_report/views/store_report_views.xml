<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_store_report_form" model="ir.ui.view">
        <field name="name">store.report.form</field>
        <field name="model">store.report</field>
        <field name="arch" type="xml">
            <form string="Store Monthly Report">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project"/>
                    </group>

                    <notebook>
                        <page string="Monthly Reports">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="month_label"/>
                                    <field name="item"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="type_of_material"/>
                                    <field name="date"/>
                                    <field name="day"/>
                                    <field name="sector"/>
                                    <field name="transaction_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_store_report_tree" model="ir.ui.view">
        <field name="name">store.report.tree</field>
        <field name="model">store.report</field>
        <field name="arch" type="xml">
            <tree string="Store Reports">
                <field name="name"/>
                <field name="project"/>
            </tree>
        </field>
    </record>

    <!-- Menu & Action -->
    <menuitem id="menu_store_report_root" name="Store Reports"/>
    <menuitem id="menu_store_report" name="Monthly Reports" parent="menu_store_report_root"/>

    <record id="action_store_report" model="ir.actions.act_window">
        <field name="name">Store Reports</field>
        <field name="res_model">store.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_action_store_report" name="Reports" parent="menu_store_report" action="action_store_report"/>
</odoo>
