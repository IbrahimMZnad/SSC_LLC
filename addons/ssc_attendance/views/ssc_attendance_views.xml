<odoo>
    <record id="view_ssc_attendance_form" model="ir.ui.view">
        <field name="name">ssc.attendance.form</field>
        <field name="model">ssc.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="type"/>
                        <field name="day_name"/>
                    </group>

                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list>
                                    <field name="employee_id"/>
                                    <field name="company_id"/>
                                    <field name="attendance_id"/>
                                    <field name="project_id"/>
                                    <field name="punch_machine_id"/>
                                    <field name="first_punch"/>
                                    <field name="last_punch"/>
                                    <field name="total_time"/>
                                    <field name="total_ot"/>
                                    <field name="absent"/>
                                    <field name="staff"/>
                                    <field name="on_leave"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <!-- زر المزامنة تحت الجدول -->
                    <group>
                        <button name="fetch_bioclock_data"
                                string="🔄 Sync BioCloud Data"
                                type="object"
                                class="btn-primary"
                                icon="fa-refresh"/>
                        <button name="transfer_to_x_daily_attendance"
                                string="➡️ Transfer to x_daily_attendance"
                                type="object"
                                class="btn-secondary"
                                icon="fa-arrow-right"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
