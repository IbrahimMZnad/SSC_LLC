<odoo>
    <!-- Action -->
    <record id="action_ssc_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">ssc.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage daily attendance.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ssc_root"
              name="SSC Management"/>

    <menuitem id="menu_ssc_attendance"
              name="Attendance"
              parent="menu_ssc_root"
              action="action_ssc_attendance"/>

    <!-- List View -->
    <record id="view_ssc_attendance_list" model="ir.ui.view">
        <field name="name">ssc.attendance.list</field>
        <field name="model">ssc.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ssc_attendance_form" model="ir.ui.view">
        <field name="name">ssc.attendance.form</field>
        <field name="model">ssc.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="type"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="company_id"/>
                                    <field name="attendance_id"/>
                                    <field name="first_punch"/>
                                    <field name="last_punch"/>
                                    <field name="total_time"/>
                                    <field name="total_ot"/>
                                    <field name="absent"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cron to create daily attendance -->
    <record id="ir_cron_create_daily_attendance" model="ir.cron">
        <field name="name">Create Daily Attendance</field>
        <field name="model_id" ref="module_name.model_ssc_attendance"/>
        <field name="state">code</field>
        <field name="code">model.create_daily_attendance()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>
</odoo>
