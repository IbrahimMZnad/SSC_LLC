<odoo>
    <record id="view_ssc_attendance_form" model="ir.ui.view">
        <field name="name">ssc.attendance.form</field>
        <field name="model">ssc.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="type"/>
                        <field name="day_name"/>
                    </group>
                    <notebook>
                        <page string="Attendance Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="company_id"/>
                                    <field name="attendance_id"/>
                                    <field name="project_id"/>
                                    <field name="punch_machine_id"/>
                                    <field name="first_punch"/>
                                    <field name="last_punch"/>
                                    <field name="total_time"/>
                                    <field name="total_ot"/>
                                    <field name="absent"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ssc_attendance_tree" model="ir.ui.view">
        <field name="name">ssc.attendance.tree</field>
        <field name="model">ssc.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="type"/>
                <field name="day_name"/>
            </list>
        </field>
    </record>

    <record id="action_ssc_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">ssc.attendance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ssc_attendance_root" name="Attendance"/>
    <menuitem id="menu_ssc_attendance" name="Daily Attendance" parent="menu_ssc_attendance_root" action="action_ssc_attendance"/>
</odoo>
