                        <button name="action_sync_biocloud_data"
                                type="object"
                                string="ðŸ”„ Sync BioCloud Data"
                                class="btn-primary"
                                icon="fa-refresh"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
