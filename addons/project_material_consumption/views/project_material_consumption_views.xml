<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_project_material_consumption_form" model="ir.ui.view">
        <field name="name">project.material.consumption.form</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption">
                <sheet>
                    <!-- Header Section -->
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>

                    <!-- Notebook Section -->
                    <notebook>
                        <!-- PAGE 1: MATERIALS -->
                        <page string="Materials">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                MATERIALS DETAILS
                            </div>

                            <field name="line_ids">
                                <form>
                                    <group>
                                        <group col="3">
                                            <field name="item" style="width:250px" class="text-center" align="center"/>
                                            <field name="unit" style="width:250px" class="text-center" align="center"/>
                                            <field name="type_of_material" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                        <group col="3">
                                            <field name="quantity_needed" style="width:250px" class="text-center" align="center"/>
                                            <field name="quantity_consumed" attrs="{'invisible': [('quantity_consumed', '=', 0)]}" style="width:250px" class="text-center" align="center"/>
                                            <field name="quantity_ordered" attrs="{'invisible': [('quantity_ordered', '=', 0)]}" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                        <group col="3">
                                            <field name="balance_to_order" style="width:250px" class="text-center" align="center"/>
                                            <field name="balance_to_use" style="width:250px" class="text-center" align="center"/>
                                            <field name="stock" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- PAGE 2: BOQ LINES -->
                        <page string="BOQ Lines">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                BOQ LINES DETAILS
                            </div>

                            <field name="boq_line_ids">
                                <form>
                                    <group>
                                        <group col="3">
                                            <field name="item" style="width:250px" class="text-center" align="center"/>
                                            <field name="unit" style="width:250px" class="text-center" align="center"/>
                                            <field name="type_of_material" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                        <group col="3">
                                            <field name="quantity_needed" style="width:250px" class="text-center" align="center"/>
                                            <field name="quantity_consumed" attrs="{'invisible': [('quantity_consumed', '=', 0)]}" style="width:250px" class="text-center" align="center"/>
                                            <field name="quantity_ordered" attrs="{'invisible': [('quantity_ordered', '=', 0)]}" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                        <group col="3">
                                            <field name="balance_to_order" style="width:250px" class="text-center" align="center"/>
                                            <field name="balance_to_use" style="width:250px" class="text-center" align="center"/>
                                            <field name="stock" style="width:250px" class="text-center" align="center"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW (احتياطي) -->
    <record id="view_project_material_consumption_list" model="ir.ui.view">
        <field name="name">project.material.consumption.list</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption"/>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_project_material_consumption" model="ir.actions.act_window">
        <field name="name">Project Material Consumption</field>
        <field name="res_model">project.material.consumption</field>
        <field name="view_mode">form,list</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_project_material_consumption_root" name="Project Material Consumption"/>
    <menuitem id="menu_project_material_consumption_main" name="Project Materials" parent="menu_project_material_consumption_root" action="action_project_material_consumption"/>
</odoo>
