<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_project_material_consumption_form" model="ir.ui.view">
        <field name="name">project.material.consumption.form</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption">
                <sheet>
                    <!-- Header Section -->
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>

                    <!-- Notebook Section -->
                    <notebook>
                        <!-- PAGE 1: MATERIALS -->
                        <page string="Materials">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                MATERIALS DETAILS
                            </div>

                            <field name="line_ids">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250px" class="text-center" align="center"/>
                                    <field name="unit" width="100px" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150px" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100px" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100px" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100px" class="text-center" align="center"/>
                                    <field name="stock" width="100px" class="text-center" align="center"/>
                                </list>
                            </field>
                        </page>

                        <!-- PAGE 2: BOQ LINES -->
                        <page string="BOQ Lines">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                BOQ LINES DETAILS
                            </div>

                            <field name="boq_line_ids">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250px" class="text-center" align="center"/>
                                    <field name="unit" width="100px" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150px" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100px" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100px" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100px" class="text-center" align="center"/>
                                    <field name="stock" width="100px" class="text-center" align="center"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
