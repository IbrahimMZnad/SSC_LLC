<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_project_material_consumption_form" model="ir.ui.view">
        <field name="name">project.material.consumption.form</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption">
                <sheet>
                    <!-- HEADER -->
                    <group string="General Information" class="o_group_border">
                        <group>
                            <field name="name" class="o_field_bold"/>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <!-- NOTEBOOK -->
                    <notebook class="o_notebook_modern">
                        <!-- MATERIALS PAGE -->
                        <page string="Materials">
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                MATERIALS DETAILS
                            </div>

                            <field name="line_ids" nolabel="1" widget="sol_o2m">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250" class="text-center" align="center"/>
                                    <field name="unit" width="100" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100" class="text-center" align="center"
                                           attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100" class="text-center" align="center"
                                           attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100" class="text-center" align="center"/>
                                    <field name="stock" width="100" class="text-center" align="center"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="item"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="quantity_needed"/>
                                        <field name="quantity_consumed"/>
                                        <field name="quantity_ordered"/>
                                        <field name="balance_to_order"/>
                                        <field name="balance_to_use"/>
                                        <field name="stock"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- BOQ LINES PAGE -->
                        <page string="BOQ Lines">
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                BOQ LINES DETAILS
                            </div>

                            <field name="boq_line_ids" nolabel="1" widget="sol_o2m">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250" class="text-center" align="center"/>
                                    <field name="unit" width="100" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100" class="text-center" align="center"
                                           attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100" class="text-center" align="center"
                                           attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100" class="text-center" align="center"/>
                                    <field name="stock" width="100" class="text-center" align="center"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="item"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="quantity_needed"/>
                                        <field name="quantity_consumed"/>
                                        <field name="quantity_ordered"/>
                                        <field name="balance_to_order"/>
                                        <field name="balance_to_use"/>
                                        <field name="stock"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_project_material_consumption" model="ir.actions.act_window">
        <field name="name">Project Material Consumption</field>
        <field name="res_model">project.material.consumption</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_project_material_consumption_root" name="Project Material Consumption"/>
    <menuitem id="menu_project_material_consumption_main" name="Project Materials" parent="menu_project_material_consumption_root" action="action_project_material_consumption"/>
</odoo>
