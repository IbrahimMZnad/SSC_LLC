<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_project_material_consumption_form" model="ir.ui.view">
        <field name="name">project.material.consumption.form</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption">
                <sheet>
                    <!-- HEADER SECTION -->
                    <group string="General Information" class="o_group_border">
                        <group>
                            <field name="name" class="o_field_bold"/>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <!-- NOTEBOOK SECTION -->
                    <notebook class="o_notebook_modern">
                        <!-- PAGE 1: MATERIALS -->
                        <page string="Materials">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; font-size: 14pt; line-height: 1.8; padding: 8px 0; margin-bottom: 10px; color: #0B3D91;">
                                MATERIALS DETAILS
                            </div>

                            <field name="line_ids" nolabel="1">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250px" class="text-center" align="center"/>
                                    <field name="unit" width="100px" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150px" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100px" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100px" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100px" class="text-center" align="center"/>
                                    <field name="stock" width="100px" class="text-center" align="center"/>
                                </list>
                            </field>
                        </page>

                        <!-- PAGE 2: BOQ LINES -->
                        <page string="BOQ Lines">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; font-size: 14pt; line-height: 1.8; padding: 8px 0; margin-bottom: 10px; color: #0B3D91;">
                                BOQ LINES DETAILS
                            </div>

                            <field name="boq_line_ids" nolabel="1">
                                <list editable="bottom" align="center" class="text-center">
                                    <field name="item" width="250px" class="text-center" align="center"/>
                                    <field name="unit" width="100px" class="text-center" align="center"/>
                                    <field name="type_of_material" width="150px" class="text-center" align="center"/>
                                    <field name="quantity_needed" width="100px" class="text-center" align="center"/>
                                    <field name="quantity_consumed" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_consumed', '=', 0)]}"/>
                                    <field name="quantity_ordered" width="100px" class="text-center" align="center" attrs="{'invisible': [('quantity_ordered', '=', 0)]}"/>
                                    <field name="balance_to_order" width="100px" class="text-center" align="center"/>
                                    <field name="balance_to_use" width="100px" class="text-center" align="center"/>
                                    <field name="stock" width="100px" class="text-center" align="center"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_project_material_consumption" model="ir.actions.act_window">
        <field name="name">Project Material Consumption</field>
        <field name="res_model">project.material.consumption</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_project_material_consumption_root" name="Project Material Consumption"/>
    <menuitem id="menu_project_material_consumption_main" name="Project Materials" parent="menu_project_material_consumption_root" action="action_project_material_consumption"/>
</odoo>
