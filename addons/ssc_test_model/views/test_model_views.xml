<odoo>
    <!-- Form View -->
    <record id="view_form_ssc_test_simple" model="ir.ui.view">
        <field name="name">ssc.test.simple.form</field>
        <field name="model">ssc.test.simple</field>
        <field name="arch" type="xml">
            <form string="Simple Test Form">
                <sheet>
                    <group>
                        <field name="date_field"/>
                        <field name="is_checked"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ssc_test_simple" model="ir.actions.act_window">
        <field name="name">Simple Menu</field>
        <field name="res_model">ssc.test.simple</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ssc_test_simple"
              name="Simple Menu"
              parent="base.menu_custom"
              action="action_ssc_test_simple"
              sequence="10"/>
</odoo>
