<odoo>
    <!-- Main Attendance Report List -->
    <record id="view_attendance_report_tree" model="ir.ui.view">
        <field name="name">attendance.report.tree</field>
        <field name="model">attendance.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="date"/>
                <field name="name"/>
                <field name="show_ssc_labours"/>
                <field name="show_ra_labours"/>
                <field name="show_ssc_staff"/>
                <field name="show_ra_staff"/>
            </tree>
        </field>
    </record>

    <!-- Main Attendance Report Form -->
    <record id="view_attendance_report_form" model="ir.ui.view">
        <field name="name">attendance.report.form</field>
        <field name="model">attendance.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="date"/>
                        <field name="name"/>
                        <field name="show_ssc_labours"/>
                        <field name="show_ra_labours"/>
                        <field name="show_ssc_staff"/>
                        <field name="show_ra_staff"/>
                    </group>
                    <notebook>
                        <page string="SSC Labours Attendance">
                            <field name="ssc_labours_lines">
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_att_id"/>
                                        <field name="first_punch"/>
                                        <field name="last_punch"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="RA Labours Attendance">
                            <field name="ra_labours_lines">
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_att_id"/>
                                        <field name="first_punch"/>
                                        <field name="last_punch"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="SSC Staff Attendance">
                            <field name="ssc_staff_lines">
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_att_id"/>
                                        <field name="first_punch"/>
                                        <field name="last_punch"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="RA Staff Attendance">
                            <field name="ra_staff_lines">
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="employee_att_id"/>
                                        <field name="first_punch"/>
                                        <field name="last_punch"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attendance_report" model="ir.actions.act_window">
        <field name="name">Attendance Reports</field>
        <field name="res_model">attendance.report</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
