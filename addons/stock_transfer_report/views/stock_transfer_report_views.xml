<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= FORM VIEW ================= -->
    <record id="view_project_material_consumption_form" model="ir.ui.view">
        <field name="name">project.material.consumption.form</field>
        <field name="model">project.material.consumption</field>
        <field name="arch" type="xml">
            <form string="Project Material Consumption">
                <sheet>
                    <!-- HEADER SECTION -->
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>

                    <!-- NOTEBOOK SECTION -->
                    <notebook>
                        <!-- PAGE 1: MATERIALS -->
                        <page string="Materials" style="background-color:#ffffff; padding:15px;">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                MATERIALS DETAILS
                            </div>

                            <field name="line_ids" nolabel="1" widget="sol_o2m">
                                <list editable="bottom" create="false" delete="false" multi_edit="false">
                                    <field optional="show" name="item" width="250" class="text-center" align="center"/>
                                    <field optional="show" name="unit" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="type_of_material" width="150" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_needed" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_consumed" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_ordered" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="balance_to_order" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="balance_to_use" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="stock" width="100" class="text-center" align="center"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="item"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="quantity_needed"/>
                                        <field name="quantity_consumed"/>
                                        <field name="quantity_ordered"/>
                                        <field name="balance_to_order"/>
                                        <field name="balance_to_use"/>
                                        <field name="stock"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- PAGE 2: BOQ LINES -->
                        <page string="BOQ Lines" style="background-color:#ffffff; padding:15px;">
                            <!-- SPAN TITLE -->
                            <div class="o_field_widget text-center" 
                                 style="text-decoration: underline; font-weight: bold; line-height: 1.5; padding: 10px;">
                                BOQ LINES DETAILS
                            </div>

                            <field name="boq_line_ids" nolabel="1" widget="sol_o2m">
                                <list editable="bottom" create="false" delete="false" multi_edit="false">
                                    <field optional="show" name="item" width="250" class="text-center" align="center"/>
                                    <field optional="show" name="unit" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="type_of_material" width="150" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_needed" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_consumed" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="quantity_ordered" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="balance_to_order" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="balance_to_use" width="100" class="text-center" align="center"/>
                                    <field optional="show" name="stock" width="100" class="text-center" align="center"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="item"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="quantity_needed"/>
                                        <field name="quantity_consumed"/>
                                        <field name="quantity_ordered"/>
                                        <field name="balance_to_order"/>
                                        <field name="balance_to_use"/>
                                        <field name="stock"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================= ACTIONS ================= -->
    <record id="action_project_materials_list" model="ir.actions.act_window">
        <field name="name">Materials</field>
        <field name="res_model">project.material.consumption.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_project_boq_list" model="ir.actions.act_window">
        <field name="name">BOQ Lines</field>
        <field name="res_model">project.material.consumption.boq.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ================= MENU ================= -->
    <menuitem id="menu_project_material_consumption_root" name="Project Material Consumption"/>
    <menuitem id="menu_project_materials" name="Materials" parent="menu_project_material_consumption_root" action="action_project_materials_list"/>
    <menuitem id="menu_project_boq" name="BOQ Lines" parent="menu_project_material_consumption_root" action="action_project_boq_list"/>

</odoo>
