<odoo>
    <!-- Form View -->
    <record id="view_stock_transfer_report_form" model="ir.ui.view">
        <field name="name">stock.transfer.report.form</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer Report">
                <sheet>
                    <group>
                        <field name="from_store"/>
                        <field name="company_from"/>
                        <field name="to_store"/>
                        <field name="company_to"/>
                    </group>
                    <notebook>
                        <page string="Outgoing Lines">
                            <field name="outgoing_lines"/>
                        </page>
                        <page string="Incoming Lines">
                            <field name="incoming_lines"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_fetch_transactions" type="object" string="Fetch Transactions" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_stock_transfer_report_list" model="ir.ui.view">
        <field name="name">stock.transfer.report.list</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <list string="Stock Transfer Reports">
                <field name="from_store"/>
                <field name="company_from"/>
                <field name="to_store"/>
                <field name="company_to"/>
            </list>
        </field>
    </record>

    <!-- Lines Form View -->
    <record id="view_stock_transfer_line_form" model="ir.ui.view">
        <field name="name">stock.transfer.line.form</field>
        <field name="model">stock.transfer.line</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer Line">
                <sheet>
                    <group>
                        <field name="description"/>
                        <field name="item"/>
                        <field name="item_serial_no"/>
                        <field name="unit"/>
                        <field name="type_of_material"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_stock_transfer_report" model="ir.actions.act_window">
        <field name="name">Stock Transfer Reports</field>
        <field name="res_model">stock.transfer.report</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5,0,0),
            (0,0,{'view_mode':'list','view_id':ref('view_stock_transfer_report_list')}),
            (0,0,{'view_mode':'form','view_id':ref('view_stock_transfer_report_form')})]"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_stock_transfer_report_root" name="Stock Transfer Reports" sequence="10"/>
    <menuitem id="menu_stock_transfer_report" name="Reports" parent="menu_stock_transfer_report_root" action="action_stock_transfer_report"/>
</odoo>
