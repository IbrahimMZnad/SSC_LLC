<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FORM VIEW -->
    <record id="view_stock_transfer_report_form" model="ir.ui.view">
        <field name="name">stock.transfer.report.form</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer Report" class="oe_background_grey">
                <sheet>
                    <!-- Header -->
                    <group string="Report Information" col="2" style="background-color:#F4F6F7; padding:10px; border-radius:8px;">
                        <field name="store" nolabel="0"/>
                        <field name="company" nolabel="0"/>
                    </group>

                    <!-- Fetch Button -->
                    <group style="margin-top:15px; text-align:center;">
                        <button name="action_fetch_transactions"
                                string="ðŸ”„ Fetch All Transactions"
                                type="object"
                                class="btn-primary"
                                style="background-color:#2874A6; color:white; font-weight:bold; border-radius:6px; padding:8px 16px;"/>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <!-- OUTGOING LINES -->
                        <page string="ðŸ“¤ Outgoing Lines" style="background-color:#FEF9E7;">
                            <group>
                                <field name="outgoing_lines" nolabel="1">
                                    <tree string="Outgoing Lines" decoration-muted="1" editable="false">
                                        <field name="description"/>
                                        <field name="item"/>
                                        <field name="date"/>
                                        <field name="quantity"/>
                                        <field name="notes"/>
                                    </tree>
                                    <form string="Outgoing Line" create="false" edit="false">
                                        <group col="4" style="background-color:#FCF3CF; border-radius:8px; padding:10px; margin-top:6px;">
                                            <field name="description" readonly="1"/>
                                            <field name="item" readonly="1"/>
                                            <field name="date" readonly="1"/>
                                            <field name="quantity" readonly="1"/>
                                            <field name="notes" readonly="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>

                        <!-- INCOMING LINES -->
                        <page string="ðŸ“¥ Incoming Lines" style="background-color:#EBF5FB;">
                            <group>
                                <field name="incoming_lines" nolabel="1">
                                    <tree string="Incoming Lines" decoration-muted="1" editable="false">
                                        <field name="description"/>
                                        <field name="item"/>
                                        <field name="date"/>
                                        <field name="quantity"/>
                                        <field name="notes"/>
                                    </tree>
                                    <form string="Incoming Line" create="false" edit="false">
                                        <group col="4" style="background-color:#D6EAF8; border-radius:8px; padding:10px; margin-top:6px;">
                                            <field name="description" readonly="1"/>
                                            <field name="item" readonly="1"/>
                                            <field name="date" readonly="1"/>
                                            <field name="quantity" readonly="1"/>
                                            <field name="notes" readonly="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_stock_transfer_report_list" model="ir.ui.view">
        <field name="name">stock.transfer.report.list</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <list string="Stock Transfer Reports">
                <field name="store"/>
                <field name="company"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_stock_transfer_report" model="ir.actions.act_window">
        <field name="name">Stock Transfer Reports</field>
        <field name="res_model">stock.transfer.report</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_transfer_report_list"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_stock_transfer_report_root" name="Stock Transfer Reports"/>
    <menuitem id="menu_stock_transfer_report_main" name="Reports" parent="menu_stock_transfer_report_root" action="action_stock_transfer_report"/>
</odoo>
