<odoo>
    <!-- FORM VIEW -->
    <record id="view_stock_transfer_report_form" model="ir.ui.view">
        <field name="name">stock.transfer.report.form</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <form string="Stock Transfer Report">
                <sheet>
                    <group>
                        <field name="from_store"/>
                        <field name="company_from"/>
                        <field name="to_store"/>
                        <field name="company_to"/>
                    </group>

                    <!-- Ø²Ø± Fetch Transactions ÙÙˆÙ‚ Ø§Ù„Ù†ÙˆØªØ¨ÙˆÙƒ -->
                    <group>
                        <button name="action_fetch_transactions"
                                string="ðŸ”„ Fetch Transactions"
                                type="object"
                                class="btn-primary"
                                icon="fa-refresh"/>
                    </group>

                    <notebook>
                        <!-- Outgoing Lines -->
                        <page string="Outgoing Lines">
                            <field name="outgoing_lines" context="{'default_report_type':'outgoing'}">
                                <form string="Outgoing Line">
                                    <group>
                                        <field name="description"/>
                                        <field name="item"/>
                                        <field name="item_serial_no"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="date"/>
                                        <field name="quantity"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <!-- Incoming Lines -->
                        <page string="Incoming Lines">
                            <field name="incoming_lines" context="{'default_report_type':'incoming'}">
                                <form string="Incoming Line">
                                    <group>
                                        <field name="description"/>
                                        <field name="item"/>
                                        <field name="item_serial_no"/>
                                        <field name="unit"/>
                                        <field name="type_of_material"/>
                                        <field name="date"/>
                                        <field name="quantity"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_stock_transfer_report_list" model="ir.ui.view">
        <field name="name">stock.transfer.report.list</field>
        <field name="model">stock.transfer.report</field>
        <field name="arch" type="xml">
            <list string="Stock Transfer Reports">
                <field name="from_store"/>
                <field name="company_from"/>
                <field name="to_store"/>
                <field name="company_to"/>
                <field name="create_date"/>
                <field name="write_date"/>
            </list>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_stock_transfer_report" model="ir.actions.act_window">
        <field name="name">Stock Transfer Reports</field>
        <field name="res_model">stock.transfer.report</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_transfer_report_list"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_stock_transfer_report_root" name="Stock Transfer Reports"/>
    <menuitem id="menu_stock_transfer_report" name="Reports"
              parent="menu_stock_transfer_report_root"
              action="action_stock_transfer_report"/>
</odoo>
